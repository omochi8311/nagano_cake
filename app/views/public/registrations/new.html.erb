<div class="container">
  <div class="row my-3 h3">
<h4 class="title">新規会員登録</h4>
  </div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
<div class="col-md-8 offset-md-1">
  <table>
    <tr>
      <td>名前</td>
      <td><%= f.label :last_name, "(姓)" %></td>
      <td><%= f.text_field :last_name %></td>
      <td><%= f.label :first_name,"(名)" %></td>
      <td><%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= f.label :last_name_kana, "(セイ)" %></td>
      <td><%= f.text_field :last_name_kana %></td>
      <td><%= f.label :first_name_kana, "(メイ)" %></td>
      <td><%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
      <td><%= f.label :email, "メールアドレス" %></td>
      <td colspan='1'></td>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
    <tr>
      <td><%= f.label :postal_code, "郵便番号（ハイフンなし）" %></td>
      <td colspan='1'></td>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <td><%= f.label :address, "住所" %></td>
      <td colspan='1'></td>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td><%= f.label :telephone_number, "電話番号（ハイフンなし）" %></td>
      <td colspan='1'></td>
      <td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
      <td><%= f.label :password, "パスワード(6文字以内)" %></td>
      <td>
        <% if @minimum_password_length %>
        <% @minimum_password_length %>
        <% end %>
      </td>
      <td><%= f.password_field :password, autocomplete: "new-password" %></td>
    </tr>
    <tr>
      <td><%= f.label :password_confirmation, "パスワード（確認用）" %></td>
      <td colspan='1'></td>
      <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
    </tr>
</table>
  <div class="form-group row justify-content-center">
    <%= f.submit "新規登録",class: "btn btn-success" %>
  </div>
<% end %>
  <div class="row my-3 h3">
    <h4 class="title">既に登録済みの方</h4>
  </div>
　<%= render "public/shared/links" %>
　からログインしてください。
  </div>
</div>