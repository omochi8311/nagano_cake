<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <%= image_tag @item.image, size: "200x200" %>
      <span><%= @item.name %></span>
      <h5><%= @item.introduction %></h5>
      ¥<%= @item.price %><h6>(税込)</h6>
      <%= form_with model: @cart_item ,url:cart_items_path do |f| %>
        <%= f.select :amount, [['いち',1], ['に',2], ['さん',3],['よん',4],['ご',5],['ろく',6],['なな',7],['はち',8],['きゅう',9],['じゅう',10]],include_blank:"個数選択" %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.submit "カートに入れる",class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div