<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h4>商品一覧</h4>
        <% @items.each do |item| %>
          <%= link_to item_path(item) do %>
            <%= image_tag item.image, size: "200x200" %>
          <% end %><br>
            <%= item.name %><br>
            ¥<%= item.price %>
        <% end %>
    </div>
  </div>
</div