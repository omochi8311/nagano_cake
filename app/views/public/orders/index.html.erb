<div class="container">
  <div class="row my-3 h5">
    <h4 class="title">注文履歴一覧</h4>
  </div>
      <table class="table table-bordered ">
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
        <tr>
          <% @orders.each do |order| %>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              〒<%= order.postal_code %>
              <%= order.address %>
              <%= order.name %>
            </td>
            <td>
              <% order.order_derails.each do |order_detail| %>
                <%= order_detail.item.name %>
              <% end %>
            <td><%= order.total_payment %>円</td>
            <td><%= order.status_i18n %></td>
            <td><%= link_to "表示する",order_path(order),class: "btn btn-primary" %></td>
        </tr>
           <% end %>
      </table>
</div>