<div class="container">
  <div class="row my-3 h5">
    <h4 class="title">会員情報編集</h4>
  </div>
    <div class="col-md-8 offset-md-1">
      <div class="mypage-edit">
      <table>
        <%= form_with model:@customer,url: customers_update_path do |f| %>
          <tr>
            <td>氏名</td>
            <td><%= f.text_field :last_name %> <%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= f.text_field :telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.text_field :email %></td>
          </tr>
      </table>
      </div>
              <%= f.submit "編集内容を保存",class: "btn btn-success" %>
        <% end %>
              <%= link_to "退会する",customers_withdrawal_path,class: "btn btn-danger" %>
    </div>
  </div>
</div