<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
        <h4>商品編集</h4>
          <%= form_with model:@item,url: admin_item_path(@item) do |f| %>
            <h5>商品画像</h5>

              <h5>商品名</h5>
                <%= f.text_field :name %>
              <h5>商品説明</h5>
                <%= f.text_area :introduction %>
              <h5>ジャンル</h5>
                <%= f.collection_select :genre_id,@genres, :id, :name,include_blank: "選択して下さい" %>
              <h5>税抜価格</h5>
                <%= f.text_field :price %>
              <h5>販売ステータス</h5>
            <%= f.submit "変更を保存",class: "btn btn-success" %>
          <% end %>
    </div>
  </div>
</div>