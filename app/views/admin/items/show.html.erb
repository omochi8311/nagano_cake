<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
        <h4>商品詳細</h4>
            <%= @item.image_id %>
          <h5>商品名</h5>
            <%= @item.name %>
          <h5>商品説明</h5>
            <%= @item.introduction %>
          <h5>ジャンル</h5>
            <%= @item.genre.name %>
          <h5>税込価格(税抜価格)</h5>
            <%= @item.price %>
          <h5>販売ステータス</h5>
            <% if @item.is_active %>
            <h5>販売中</h5>
            <% else %>
            <h5>販売停止中</h5>
            <% end %>
          <%= link_to "編集する",edit_admin_item_path(@item),class: "btn btn-success" %>
    </div>
  </div>
</div>