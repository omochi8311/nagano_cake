<div class="container">
  <div class="row my-3 h5">
    <h4 class="title">商品詳細</h4>
  </div>
    <div class="col-md-8 offset-md-1">
            <%= image_tag @item.image, size: "200" %>
          <h5>商品名</h5>
            <%= @item.name %>
          <h5>商品説明</h5>
            <%= @item.introduction %>
          <h5>ジャンル</h5>
            <%= @item.genre.name %>
          <h5>税込価格(税抜価格)</h5>
            <%= @item.with_tax_price %>
           (<%= @item.price %>)円
          <h5>販売ステータス</h5>
            <% if @item.is_active %>
              <h6 class="text-success">販売中</h6>
            <% else %>
              <h6 class="text-secondary">販売停止中</h6>
            <% end %>
          <%= link_to "編集する",edit_admin_item_path(@item),class: "btn btn-success" %>
    </div>
</div>