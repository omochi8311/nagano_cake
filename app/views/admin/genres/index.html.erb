<div class="container">
  <div class="row my-3 h5">
    <h4 class="title">ジャンル一覧・追加</h4>
  </div>
    <%= form_with model: @genre,url: admin_genres_path do |f| %>
      <h5>ジャンル名
        <%= f.text_field :name %>
        <%= f.submit "新規登録",class: "btn btn-success" %>
      </h5>
    <% end %>
    <div class="col-md-3">
        <table class="table table-hover table-inverse">
            <tr>
              <th>
                <h5>ジャンル</h5>
              </th>
            </tr>
              <% @genres.each do |genre| %>
            <tr>
              <td>
                  <%= genre.name %>
                  <%= link_to "編集する",edit_admin_genre_path(genre),class: "btn btn-success" %>
              </td>
            </tr>
              <% end %>
        </table>
    </div>
</div>