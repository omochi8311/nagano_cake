<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h3>会員一覧</h3>
        <table class="table table-hover table-inverse">
          <tbody>
            <thead>
              <tr>
                <th>会員id</th>
                <th>氏名</th>
                <th>メールアドレス</th>
                <th>ステータス</th>
              </tr>
              <tr>
                <% @customer.each do |customer| %>
                  <td><%= customer.id %></td>
                  <td><%= link_to customer.last_name,"customers/#{customer.id}" %></td>
                  <td><%= customer.email %></td>
                  <td>
                      <% if customer.is_deleted %>
                        <h6 class="text-secondary">退会</h6>
                      <% else %>
                        <h6 class="text-success">有効</h6>
                      <% end %>
                  </td>
                <% end %>
              </tr>
            </thead>
          </tbody>
        </table>
    </div>
  </div>
</div>